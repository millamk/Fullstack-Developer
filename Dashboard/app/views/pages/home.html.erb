<div class="container mt-5">
  <% if current_user %>
    <h2>Your profile information: </h2>
      <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
      <p>First name: <%= @user.first_name %></p>
      <p>Last name: <%= @user.last_name %></p>
      <p>Email: <%= @user.email %></p>
    <%= link_to 'Edit', edit_user_registration_path, class: 'btn btn-primary' %>
    <%= link_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-dark' %>
  <% else %>
    <h1> Olá! Por favor cadastre-se ou faça login: </h1>
    <%= link_to 'Register', new_user_registration_path, class: 'btn btn-dark' %>
    <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
  <% end %>
</div>
